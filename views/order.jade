extends layout

block content
  h3= title
  .table-responsive
    form#createOrder(action='create_payment_url', method='POST')
      .form-group
        label Số tiền
        input.form-control#amount(name='amount', placeholder='Số tiền', value=amount)

      .form-group
        label Chọn Phương thức thanh toán:
        label.control-label
        .controls
          label.radio-inline
            input(type='radio', name='bankCode', id='defaultPaymentMethod', value='', checked='true')
            |  Cổng thanh toán VNPAYQR
        .controls
          label.radio-inline
            input(type='radio', name='bankCode', id='vnpayqrPaymentMethod', value='VNPAYQR')
            |  Thanh toán qua ứng dụng hỗ trợ VNPAYQR
        .controls
          label.radio-inline
            input(type='radio', name='bankCode', id='vnbankPaymentMethod', value='VNBANK')
            |  Thanh toán qua ATM - Tài khoản ngân hàng nội địa
        .controls
          label.radio-inline
            input(type='radio', name='bankCode', id='intcardPaymentMethod', value='INTCARD')
            |  Thanh toán qua thẻ quốc tế

      .form-group
        label Ngôn ngữ
        label.control-label
        .controls
          label.radio-inline
            input(type='radio', name='language', id='vnLanguage', value='vn', checked='true')
            |  Tiếng Việt
        .controls
          label.radio-inline
            input(type='radio', name='language', id='enLanguage', value='en')
            |  Tiếng Anh

      button.btn.btn-default#btnPopup(type='submit') Thanh toán
  p  
